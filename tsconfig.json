{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"outDir": "./lib",
		"baseUrl": "./src",
		"rootDir": "./src",
		"moduleResolution": "node",
		"alwaysStrict": true,
		"strict": true,
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"declaration": true
	},
	"include": [
		"src/**/*.ts",
		"test/converter/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"lib"
	]
}